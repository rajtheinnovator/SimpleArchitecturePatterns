<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_mvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:padding="8dp"
        android:text="@string/mvp_example"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_mvp_without_rx_and_dagger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:padding="8dp"
        android:text="@string/mvp_without_rx_and_dagger_example"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_mvvm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:padding="8dp"
        android:text="@string/mvvm_example"
        android:textAllCaps="false"
        android:textSize="16sp" />

</LinearLayout>